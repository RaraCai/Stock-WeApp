Page{
  background-color: #f5f5f5;
}
.container {
  padding: 10px;
  background: #f5f5f5;
}

.search-bar {
	
  display: flex;
  align-items: center;
  background: #fff;
  padding: 8px 12px;
  border-radius: 4px;
  margin-bottom: 10px;
}

.search-bar icon {
  margin-right: 6px;
}

.valuation-section, .other-analysis {
  padding: 10px;
  margin-bottom: 15px;
}

.stock-value {
	color: #732BF5;
	font-weight: 600;
}

.section-title {
  font-size: 16px;
	font-weight: 550;
  margin-bottom: 15px;
  color: #333;
}

.valuation-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
}

.grid-item {
  display: flex;
  flex-direction: column;
  padding: 10px;
	background:  white;
  border-radius: 4px;
}

.grid-item .label {
  font-size: 12px;
  color: #999;
}

.grid-item .value {
  font-size: 16px;
  font-weight: 500;
	margin: 4px 0;
}

.grid-item .estimate {
  font-size: 12px;
  color: #732BF5;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.analysis-item .label {
  font-size: 14px;
  color: #333;
}

.analysis-item .value {
  font-size: 14px;
  font-weight: 500;
  color: #732BF5;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 10px 12px;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: #333;
  position: relative;
}

.tab.active {
  color: #732BF5;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background: #732BF5;
}

.content {
  flex: 1;
  background: #fff;
  padding: 15px;
  border-radius: 8px;
}

.section {
	margin-bottom: 10px;
	padding: 10px;
}

.section-subtitle {
  font-size: 14px;
  font-weight: 550;
  margin-top: 10px;
  color: #732BF5;
}

.model-section {
  margin-bottom: 20px;
}

.description {
  font-size: 14px;
  color: #666;
	margin-top: 10px;
}

.divider {
  height: 0.5px; 
  background-color: #e6e6e6; 
	width: 100%;
	margin-bottom: 15px;
}

.stock-list {
  margin-bottom: 15px;
}

.stock-item {
  padding: 10px;
  background: #fff;
  border-bottom: 1px solid #eee;
	cursor: pointer;
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex: 1;
}

.stock-item.selected {
	box-shadow: 0 0px 8px rgba(161, 111, 255, 0.13), 0 6px 20px rgba(179, 138, 255, 0.13);
	font-weight: 600;
	border-radius: 10px;
}

.stock-info {
	flex: 1;
}

.stock-name {
  font-size: 16px;
  color: #333;
}


.stock-code {
  font-size: 14px;
  color: #999;
}

.stock-detail {
  background: #cbafff0c;
  padding: 10px;
  border-radius: 0 0 20px 20px;
  margin-bottom: 15px;
  box-shadow: 0 4px 8px rgba(114, 43, 245, 0.027), 0 6px 20px rgba(114, 43, 245, 0.075);
}

.arrow-icon {
	margin-left: auto;
	margin-right: 10px;
}
