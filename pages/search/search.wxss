.container {
  background: #fff;
  height: 100vh;
}

.search-header {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 4px;
  padding: 6px 12px;
}

.search-input {
  flex: 1;
  margin: 0 8px;
  font-size: 14px;
}

.cancel-btn {
  padding: 0 12px;
  font-size: 14px;
  color: #732BF5;
}

.search-result {
  height: calc(100vh - 56px);
}

.result-item {
  padding: 12px;
  border-bottom: 1px solid #eee;
}

.stock-info {
  display: flex;
  align-items: center;
}

.stock-name {
  font-size: 14px;
  margin-right: 8px;
}

.stock-code {
  font-size: 12px;
  color: #999;
}

.history-section {
  padding: 12px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  font-size: 14px;
}

.clear-history {
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  background: #f5f5f5;
  padding: 6px 12px;
  border-radius: 4px;
  margin: 0 8px 8px 0;
  font-size: 12px;
}

.time-selector .active {
  color: #732BF5;
} 