/* pages/market/market.wxss */
.container {
  padding: 10px;
  background: #f5f5f5;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 8px 12px;
  border-radius: 4px;
  margin-bottom: 10px;
}

.search-bar icon {
  margin-right: 6px;
}
.placeholder {
  margin-left: 8px;
  font-size: 14px;
  color: #999;
}

.market-tabs {
  display: flex;
  background: #fff;
  padding: 12px 15px;
  margin-bottom: 10px;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: #333;
  position: relative;
}

.tab.active {
  color: #732BF5;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -12px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background: #732BF5;
}

.index-section {
  background: #fff;
  padding: 15px 0;
  margin-bottom: 10px;
}

.index-scroll {
  white-space: nowrap;
}

.index-item {
  display: inline-block;
  padding: 0 15px;
  text-align: center;
}

.index-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.index-price {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 4px;
}

.index-change {
  font-size: 12px;
}

.up {
  color: #f5222d;
}

.down {
  color: #52c41a;
}

.stock-list-header {
  display: flex;
  padding: 12px 15px;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
  font-size: 14px;
  color: #999;
}

.header-item {
  flex: 1;
  text-align: right;
}

.header-item:first-child {
  text-align: left;
  flex: 2;
}

.stock-list {
  background: #fff;
  height: calc(100vh - 220px);
}

.stock-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.stock-info {
  flex: 2;
}

.stock-name {
  font-size: 15px;
  color: #333;
  margin-bottom: 4px;
}

.stock-code {
  font-size: 12px;
  color: #999;
}

.stock-price {
  flex: 1;
  text-align: right;
  font-size: 15px;
  color: #333;
}

.stock-change {
  flex: 1;
  text-align: right;
  font-size: 15px;
}