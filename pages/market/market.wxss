Page{
  background-color: #f5f5f5;
}

.container {
  padding: 10px;
  background: #f5f5f5;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 8px 12px;
  border-radius: 4px;
  margin-bottom: 10px;
}

.search-bar icon {
  margin-right: 6px;
}

.market-tabs {
  display: flex;
  background: #fff;
  padding: 10px 12px;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 15px;
  color: #333;
  position: relative;
}

.tab.active {
  color: #732BF5;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background: #732BF5;
}

.index-section {
  background: #fff;
  padding: 15px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between; /* 三个元素之间平均分布 */
  align-items: center; /* 垂直居中 */
}

.index-item {
  flex: 1; /* 每个项目占据相等空间 */
  text-align: center;
  padding: 0 15px;
}

.index-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.index-price {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 4px;
}

.index-change {
  font-size: 12px;
}

.up {
  color: #f5222d;
}

.down {
  color: #52c41a;
}

.stock-list-header {
  display: flex;
  padding: 20rpx 30rpx;
  font-size: 25rpx;
  color: #999;
  background: #fff;
}

.header-stock {
  width: 50%;  /* 股票列占据左半部分 */
  text-align: left;
}

.header-price, .header-change {
  width: 25%;
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 6rpx; 
}

.sort-arrows {
  display: inline-flex;
  flex-direction: column;
  height: 24rpx;
  width: 12rpx;
  margin-top: 10rpx;  /* 微调箭头的垂直位置 */
}

.arrow-up {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 8rpx solid #ccc;
	margin-bottom: 3rpx;/*上下箭头之间的间距*/
	margin-top: 2rpx;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #ccc;
}

.sort-arrows.active .arrow-up.active {
  border-bottom-color: #732BF5;
}

.sort-arrows.active .arrow-down.active {
  border-top-color: #732BF5;
}

.header-item {
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}


/* 第一列左对齐 */
.header-item:first-child {
  justify-content: flex-start;
}

/* 最后一列右对齐 */
.header-item:last-child {
  justify-content: flex-end;
}

.stock-list {
  background: #fff;
}

.stock-item {
  display: flex;
  align-items: center;
  padding: 15px;
	border-bottom: 1px solid #f0f0f0;
	border-top: 1px solid #f0f0f0;
}

.stock-info {
  flex: 2;
}

.stock-name {
  font-size: 15px;
  color: #333;
  margin-bottom: 4px;
}

.stock-code {
  font-size: 12px;
  color: #999;
}

.stock-price {
  flex: 1;
  text-align: right;
  font-size: 15px;
  color: #333;
}

.stock-change {
  flex: 1;
  text-align: right;
  font-size: 15px;
}

.divider {
  height: 0.5px;  /* 非常细的线 */
  background-color: #e6e6e6;  /* 浅灰色 */
  width: 100%;
}




